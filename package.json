{
  "name": "seneca",
  "version": "1.0.0",
  "description": "Node.js project with SOLID principles and Inversify",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npm run build && ts-node src/server.ts",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "check": "npm run lint && npm run format",
    "migration": "npx typeorm migration:create src/infrastructure/database/migrations/$npm_config_name",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/infrastructure/database/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/infrastructure/database/data-source.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.7.7",
    "@bull-board/express": "^6.7.7",
    "@types/redis": "^4.0.10",
    "bcryptjs": "^3.0.1",
    "bull": "^4.16.5",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "imap-simple": "^5.1.0",
    "inversify": "^6.2.2",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^3.15.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/imap-simple": "^4.2.9",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mailparser": "^3.4.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.3",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/redis-info": "^3.0.3",
    "@types/reflect-metadata": "^0.0.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "commitlint": "^19.7.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
